<Window x:Class="MathGame.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathGame"
        mc:Ignorable="d"
        Title="ScoreWindow" Height="279" Width="429" Closing="OpenMain">
    <Grid x:Name="ScoreWin">
        <Grid.Background>
            <ImageBrush ImageSource="Images/Pinkie_Pie_throwing_balloons_S4E12.png"/>
        </Grid.Background>

        <Label x:Name="GreetingLBL" Content="Congratulations!" HorizontalAlignment="Left" Margin="0,-12,0,0" VerticalAlignment="Top" FontSize="36" Height="58" Width="411" Foreground="#FFB607F7"/>
        <Label x:Name="ScoreLBL" Content="You got: 10/10 Questions Correct!!" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top" FontSize="24" Height="42" Width="377" Foreground="#FFB607F7"/>
        <Label x:Name="ResopnceLbl" Content="A Perfect Score!" HorizontalAlignment="Left" Margin="0,51,0,0" VerticalAlignment="Top" FontSize="24" Height="42" Width="407" Foreground="#FFB607F7"/>
        <Button Content="OK!" HorizontalAlignment="Left" Margin="306,217,0,0" VerticalAlignment="Top" Width="75" Click="Done" Height="22" Opacity="0.75" IsDefault="True"/>

    </Grid>
</Window>
